    }

    .buttons {
      position: relative;
      height: 120px;
    }

    button {
      padding: 14px 22px;
      border: none;
      border-radius: 999px;
      font-size: 16px;
      cursor: pointer;
      transition: transform 0.2s ease;
      position: absolute;
    }

    #yes {
      background: #ff4d8d;
      color: white;
      left: 50%;
      transform: translateX(-120%);
    }

    #no {
      background: #eee;
      left: 50%;
      transform: translateX(20%);
    }

    button:hover {
      transform: scale(1.08);
    }

    .hidden {
      display: none;
    }

    .result {
      font-size: 22px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="card">
